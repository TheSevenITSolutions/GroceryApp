<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp">

        <RelativeLayout
            android:id="@+id/dot"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_offwhiteround" />

        <RadioButton
            android:id="@+id/radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/tv_productweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/gilroymedium"
            android:text="weight"
            android:textSize="12sp" />

        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="150dp"
            android:textSize="12sp"
            android:fontFamily="@font/gilroymedium"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">


            <RelativeLayout
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp">


                <TextView
                    android:id="@+id/tvAdd"
                android:paddingVertical="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray_10"
                android:drawableStart="@drawable/ic_round_add_24"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroymedium"
                    android:gravity="center"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:text="@string/add"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />

            <TextView
                android:id="@+id/tv_productoutofstock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/gilroymedium"
                android:gravity="center"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:singleLine="true"
                android:text="Out of Stock"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/lytPlusMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_gray_10"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="3dp"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="15dp"
                        android:id="@+id/img_minus"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_remove_24"
                        app:tint="@color/colorPrimary" />

                    <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_baseline_add_24"
                        app:tint="@color/colorPrimary" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>

