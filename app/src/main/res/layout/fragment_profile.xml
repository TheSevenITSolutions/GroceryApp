<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/bg_bottom_sheet">

                    <LinearLayout
                        android:id="@+id/lyt_userbio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gilroymedium"
                                android:textColor="@color/color_black"
                                android:textSize="14sp"
                                tools:text="Anurag s" />

                            <ImageView
                                android:id="@+id/img_iconedit"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_baseline_edit_24"
                                app:tint="@color/colorPrimary" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_userEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_userName"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/gilroymedium"
                            android:textSize="12sp"
                            tools:text="anurag.s.123123" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_userMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_userEmail"

                            android:fontFamily="@font/gilroymedium"
                            android:textSize="12sp"
                            tools:text="7801916340" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lyt_userbio"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gilroymedium"
                                android:text="My Adress"
                                android:textColor="@color/color_black"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:id="@+id/tv_adress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gilroymedium"
                                android:textSize="14sp"
                                tools:text="home surat panchdev soc 395008" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:paddingStart="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gilroymedium"
                                android:text="@string/my_wallet"
                                android:textColor="@color/color_black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvWallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/gilroymedium"
                                android:textColor="@color/color_black"
                                android:textSize="18sp"
                                tools:text="100" />

                            <ImageView
                                android:id="@+id/ivAddWallet"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="12dp"
                                android:src="@drawable/ic_baseline_add_24"
                                app:tint="@color/colorPrimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/lytMyorders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".3dp"
                                android:background="@color/light_gray" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:padding="10dp"
                                    android:src="@drawable/shoppingbags" />

                                <TextView
                                    android:textColor="@color/color_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:fontFamily="@font/gilroymedium"
                                    android:text="My Orders"
                                    android:textSize="@dimen/profile_text_size" />

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                    app:tint="@color/color_black" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".3dp"
                                android:background="@color/light_gray" />

                            <RelativeLayout
                                android:id="@+id/lyt_deliveryAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:padding="5dp"
                                    android:src="@drawable/address" />

                                <TextView
                                    android:textColor="@color/color_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:fontFamily="@font/gilroymedium"
                                    android:text="My Delivery Address"
                                    android:textSize="@dimen/profile_text_size" />

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                    app:tint="@color/color_black" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".3dp"
                                android:background="@color/light_gray" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lytrefer"
                                android:layout_marginStart="10dp">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:padding="10dp"
                                    android:src="@drawable/refer" />

                                <TextView
                                    android:textColor="@color/color_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:fontFamily="@font/gilroymedium"
                                    android:text="Refer A Friends"
                                    android:textSize="@dimen/profile_text_size" />

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                    app:tint="@color/color_black" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".3dp"
                                android:background="@color/light_gray" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lytterms"
                                android:layout_marginStart="10dp">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:padding="10dp"
                                    android:src="@drawable/terms" />

                                <TextView
                                    android:textColor="@color/color_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:fontFamily="@font/gilroymedium"
                                    android:text="Terms &amp; Conditions"
                                    android:textSize="@dimen/profile_text_size" />

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                    app:tint="@color/color_black" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".3dp"
                                android:background="@color/light_gray" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lytpolicy"
                                android:layout_marginStart="10dp">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:padding="10dp"
                                    android:src="@drawable/privacypolicy" />

                                <TextView
                                    android:textColor="@color/color_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:fontFamily="@font/gilroymedium"
                                    android:text="Privacy Policy"
                                    android:textSize="@dimen/profile_text_size" />

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                    app:tint="@color/color_black" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".3dp"
                                android:background="@color/light_gray" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lytabout"
                                android:layout_marginStart="10dp">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:padding="8dp"
                                    android:src="@drawable/aboutus" />

                                <TextView
                                    android:textColor="@color/color_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:fontFamily="@font/gilroymedium"
                                    android:text="About Us"
                                    android:textSize="@dimen/profile_text_size" />

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                    app:tint="@color/color_black" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".3dp"
                                android:background="@color/light_gray" />

                            <RelativeLayout
                                android:id="@+id/lyt_logOut"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="10dp">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:padding="5dp"
                                    android:src="@drawable/logout" />

                                <TextView
                                    android:textColor="@color/color_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:fontFamily="@font/gilroymedium"
                                    android:text="Log Out"
                                    android:textSize="@dimen/profile_text_size" />

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_round_keyboard_arrow_down_24"
                                    app:tint="@color/color_black" />
                            </RelativeLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".3dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:id="@+id/tvVerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_marginVertical="15dp"
                            android:fontFamily="@font/gilroymedium"
                            android:gravity="center"
                            android:text="111"
                            android:textColor="@color/color_black"
                            android:textSize="18sp" />
                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_marginTop="75dp"
                    android:id="@+id/imgprofile"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/bg_yellowbtn"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
              />


                <ProgressBar
                    android:id="@+id/pd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

            </RelativeLayout>

        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>